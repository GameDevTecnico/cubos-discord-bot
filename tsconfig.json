{
    "compilerOptions": {
        "module": "Node16",
        "moduleResolution": "Node16",
        "target": "es2020",
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "outDir": "dist",
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types",
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules"
    ]
}